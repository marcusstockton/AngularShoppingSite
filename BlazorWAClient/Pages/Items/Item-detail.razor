@page "/item-detail/{Id}"
@inject HttpClient Http
@using BlazorWAClient.Pages.Items;


<div class="container"> 
    <p>The Id is @Id</p>
    @if(item == null){
        <p>Loading....</p>
    }
    else{
        <div class="row">
            <div class="col-sm-6">
                <p>@item.Title</p>
                <p>@item.Description</p>
                <p>@item.Price</p>
                <p>@item.CreatedBy.Username</p>
                <p>@item.CreatedDate</p>
            </div>
            <div class="col-sm-6">
                <fieldset>
                    <legend> Images</legend>
                    @foreach (var image in item.Images)
                    {
                        <img src="https://localhost:5001/api/@image.Path" alt="@image.FileName" width="200">
                    }
                </fieldset>
            </div>
        </div>
        
        <fieldset>
            <legend>Reviews</legend>
            @foreach(var review in item.Reviews)
            {
                <p>@review.Rating / 5</p>
                <p>@review.Title</p>
                <p>@review.Description</p>
                <p>@review.CreatedBy.Username</p>
            }
        </fieldset>
        
    }
    
</div>

@code{
    [Parameter]
    public string Id { get; set; }
    ItemModel item;

    protected override async Task OnInitializedAsync()
    {
        item = await Http.GetJsonAsync<ItemModel>($"https://localhost:5001/api/Items/{Id}");
    }
}